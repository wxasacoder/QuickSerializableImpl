<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>org.wx.QuickSerializableImpl</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Quick Serializable Impl</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/wxasacoder">org.wx</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        A plugin that quickly implements the Serializable interface and generates a serialVersionUID for Java classes.<br>
        <em>Quickly implement the Serializable interface and generate a serialVersionUID in a class;
Batch select Java files or a folder containing Java classes to implement the Serializable interface and generate serialVersionUIDs for the Java classes within.</em>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>


    <actions>
        <action id="SerializableImplement" class="org.wx.quickserializableimpl.GenerateSerializableImplAndSerialIdAction" text="Serializable Implement"
                description="Serializable Implement">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>

        <action id="SerializableImplFile" class="org.wx.quickserializableimpl.FileGenerateSerializableImplAndSerialIdAction" text="Serializable Impl And Gen SerialId"
                description="Serializable Impl And Gen SerialId">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

    </actions>



    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="SerializableImplement"
                           displayType="BALLOON"
                           toolWindowId="Project"
                           isLogByDefault="false"/>
    </extensions>
</idea-plugin>